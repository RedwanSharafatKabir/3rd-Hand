<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".EquipmentOrderAndReceive.LeftEquipmentActivity"
    android:background="#ffffff"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter detail of your left equipment"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@drawable/non_corner_design"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/equipmentNameID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="  Enter equipement name"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textColorHint="#333333"
                        android:drawableLeft="@drawable/ic_equipmentname_black_24dp"
                        android:layout_marginBottom="5dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_equipment_type_black_24dp"/>

                    <Spinner
                        android:id="@+id/equipmentTypeID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:id="@+id/customerAddressID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="  Location of your left thing"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textColorHint="#333333"
                        android:drawableLeft="@drawable/ic_add_location_black_24dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/laneNumberID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="  Block and Road name / no."
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textColorHint="#333333"
                        android:drawableLeft="@drawable/ic_lane_black_24dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/buildingNumberID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="  Apartment / Building no."
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textColorHint="#333333"
                        android:drawableLeft="@drawable/ic_building_black_24dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/floorID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="  Enter floor no."
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textColorHint="#333333"
                        android:drawableLeft="@drawable/ic_floor_1_black_24dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/flatID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="  Enter flat number"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textColorHint="#333333"
                        android:drawableLeft="@drawable/ic_flat_black_24dp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center|bottom"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <Button
                    android:id="@+id/cancelID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:clickable="true"
                    android:background="@android:color/transparent"
                    android:fontFamily="serif"/>

                <Button
                    android:id="@+id/leftEquipmentSaveButtonID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button_background"
                    android:text="Save"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="serif"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
