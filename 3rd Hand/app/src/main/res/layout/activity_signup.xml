<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="#ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/first">

                <EditText
                    android:id="@+id/signupEmailID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="  email"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textColorHint="#333333"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:layout_marginBottom="5dp"/>

                <EditText
                    android:id="@+id/signupUsernameID"
                    android:hint=" username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHint="#333333"
                    android:drawableLeft="@drawable/one_person_username"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/spinnerCountriesID"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/signupPhoneID"
                        android:hint=" phone number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:textColorHint="#333333"
                        android:layout_marginBottom="5dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/signupPasswordID"
                    android:hint=" password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textColorHint="#333333"
                    android:drawableLeft="@drawable/ic_lock_outline_black_24dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/SignupID"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="35dp"
                android:clickable="true"
                android:src="@drawable/ic_arrow_forward_black_24dp"
                android:background="@drawable/button_background"
                android:layout_marginRight="35dp" />

            <Button
                android:id="@+id/closeDialogID"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Close"
                android:textSize="17dp"
                android:textColor="#12D86B"
                android:textStyle="bold"
                android:layout_gravity="end|center|bottom"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:background="@android:color/transparent"
                android:layout_marginEnd="35dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
