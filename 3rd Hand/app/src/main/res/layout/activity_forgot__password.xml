<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordPackage.Forgot_Password"
    android:background="#ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp">

            <LinearLayout
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/recoverEmailID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="  Email that belongs to your account"
                        android:inputType="textEmailAddress"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:drawableLeft="@drawable/ic_email_black_24dp"
                        android:layout_marginBottom="50dp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_recovery_phone_black_24dp"
                        android:layout_gravity="center|start"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rem"
                        android:textColor="#000000"
                        android:layout_gravity="center|start"
                        android:layout_marginLeft="5dp"
                        android:textSize="20sp"
                        android:fontFamily="serif"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.santalu.maskedittext.MaskEditText
                        android:id="@+id/recoverPhoneID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="  Phone that belongs to your account"
                        android:inputType="phone"
                        app:met_mask="+880 ##########"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:drawableLeft="@drawable/ic_phone_black_24dp"
                        android:layout_marginTop="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center|bottom"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_gravity="bottom">

                <Button
                    android:id="@+id/closeTheDialogID"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textSize="17dp"
                    android:textColor="#12D86B"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:background="@android:color/transparent"
                    android:layout_marginRight="20dp"/>

                <Button
                    android:id="@+id/submitID"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:text="Submit"
                    android:background="@drawable/button_background"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:fontFamily="serif"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
