<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:gravity="left"
    android:background="#302F2F">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/headerProfileImageID"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_profile_image_24"
        android:clickable="true"
        android:layout_gravity="center|left"
        android:background="@android:color/transparent"/>

    <LinearLayout
        android:id="@+id/headerProfileDetailID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center|left"
        android:layout_marginRight="10dp"
        android:clickable="true">
        <TextView
            android:id="@+id/profileNameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/sfc_artoonist_hand"
            android:layout_gravity="center|left" />

        <TextView
            android:id="@+id/profileEmailID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:fontFamily="serif"
            android:layout_gravity="center|left"/>

        <TextView
            android:id="@+id/profilePhoneID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:fontFamily="serif"
            android:layout_gravity="center|left"/>
    </LinearLayout>

</LinearLayout>
