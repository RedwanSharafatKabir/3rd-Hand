<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MapFragmentClass">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mapID"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapFragmentClass"/>

        <LinearLayout
            android:id="@+id/linearLayoutID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_marginTop="0dp">

<!--            <fragment-->
<!--                android:id="@+id/place_autocomplete_fragmentID"-->
<!--                android:name="com.google.android.libraries.places.compat.ui.PlaceAutocompleteFragment"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"/>-->

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:elevation="10dp"
            android:background="#FFFFFF"
            android:layout_below="@+id/linearLayoutID">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/magnifyMapID"
                android:layout_centerVertical="true"
                android:src="@drawable/magnifymap_foreground"/>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/searchMapID"
                android:layout_centerVertical="true"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/magnifyMapID"
                android:background="@android:color/transparent"
                android:hint="State or City"
                android:imeOptions="actionSearch"
                android:textColorHint="#333333"/>

        </RelativeLayout>

<!--        <RelativeLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout_marginLeft="10dp"-->
<!--            android:layout_marginRight="10dp"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:elevation="10dp"-->
<!--            android:background="#FFFFFF"-->
<!--            android:layout_below="@+id/getDeviceID">-->

<!--            <ImageView-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:id="@+id/magnifyMapID2"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:src="@drawable/magnifymap_foreground"/>-->

<!--            <EditText-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"-->
<!--                android:id="@+id/searchMapID2"-->
<!--                android:textAllCaps="false"-->
<!--                android:textSize="17sp"-->
<!--                android:textColor="#000000"-->
<!--                android:background="#ffffff"-->
<!--                android:hint="Search"-->
<!--                android:imeOptions="actionSearch"-->
<!--                android:textColorHint="#333333"-->
<!--                android:layout_toRightOf="@+id/magnifyMapID2"/>-->

<!--        </RelativeLayout>-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getDeviceID"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relativeLayoutID"
            android:src="@drawable/gps_foreground"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:background="@drawable/white_rectangle_shape"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|bottom"
        android:layout_gravity="bottom"
        android:layout_marginBottom="80dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp">

        <Button
            android:id="@+id/findPackageServiceAgentID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find service agents"
            android:textSize="18sp"
            android:textColor="#000000"
            android:background="@drawable/non_corner_rectangle_two"
            android:textAllCaps="false"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:fontFamily="serif"
            android:layout_below="@+id/getDeviceID"
            android:layout_gravity="center"
            android:textStyle="bold"/>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu"
        android:layout_gravity="bottom|center"
        android:background="#FFFFFF" />

</FrameLayout>
